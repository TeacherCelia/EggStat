<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/img_equipoHome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/txt_nombreEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="@color/verde"/>

    <TextView
        android:id="@+id/txt_saludoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, usuario!"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/azul_verdoso"/>

    <TextView
        android:id="@+id/txt_puntosUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tienes X puntos"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/naranja"/>

    <TextView
        android:id="@+id/txt_puntosEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Tu equipo tiene Y puntos"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/naranja"/>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        />

</LinearLayout>